terraform {
  required_providers {
    alertops = {
      source  = "alertopsterraform/alertops"
      version = "1.0.0"
    }
  }
}

provider "alertops" {
  api_key  = var.alertops_api_key
  base_url = "https://api.alertops.com"
}

variable "alertops_api_key" {
  description = "AlertOps API key"
  type        = string
  sensitive   = true
}

# Test user creation
resource "alertops_user" "test_user" {
  user_name  = "terraform-test-user"
  first_name = "Terraform"
  last_name  = "Test"
  locale     = "en-US"
  time_zone  = "(UTC-06:00) Central Time (US & Canada)"
  type       = "Standard"
  
  contact_methods = [
    {
      contact_method_name = "Email-Official"
      email = [
        {
          email_address = "terraform-test@yourcompany.com"
        }
      ]
      enabled                 = true
      sequence               = 1
      wait_time_in_mins      = 0
      repeat                 = false
      notification_time24x7  = true
    },
    {
      contact_method_name = "Phone-Official-Mobile"
      phone = [
        {
          country_code = "+1"
          phone_number = "5551234567"
        }
      ]
      enabled                = true
      sequence              = 2
      wait_time_in_mins     = 5
      repeat                = true
      repeat_times          = 3
      repeat_minutes        = 2
      notification_time24x7 = true
    }
  ]
  
  roles = ["Standard User"]
}

# Test data source lookup
data "alertops_user" "lookup_test_user" {
  user_name = alertops_user.test_user.user_name
}

# Outputs for verification
output "created_user_id" {
  value = alertops_user.test_user.user_id
}

output "created_user_name" {
  value = alertops_user.test_user.user_name
}

output "lookup_user_id" {
  value = data.alertops_user.lookup_test_user.user_id
}

output "user_contact_methods" {
  value = alertops_user.test_user.contact_methods
}

output "user_last_login" {
  value = alertops_user.test_user.last_login_date
} 